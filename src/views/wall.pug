doctype html
html
	head
		link(rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css")
		link(rel="stylesheet" href="main.css" type="text/css")
	body.background1
		div.navbar
			a(href='./') HOME
			a(href='./wall') WALL
			a(href='./profile') PROFILE
			a(href='/logout') LOGOUT
		div.text4
			h2 post a new message:
			form(action='/wall', method='post')
				input(type='text', minlength='2', name='title')
				br
				input(resize='both', minlength='2', maxlenght='500', name='message')
				br
				button.btn#wall(type='submit', name='submit') submit
		div.texts
			each message in messages
				each user in users
					if message.userId === user.id
						ul
							li User: #{user.email}, title: #{message.title}, message: #{message.message}
							a(href=`/post/${message.id}`) Click here to see my post 
						each comment in message.comments
							li #{user.email} commented: #{comment.comments}
					